question 1
int led=13;
int waittime=2000;
void setup() {
  pinMode (led,OUTPUT);
  
}

void loop() {
  digitalWrite(led,HIGH);
  delay (waittime*.25);
  digitalWrite (led,LOW);
delay (waittime*.75);
}

question 2
int led1=4;
int led2=5;
int led3=6;
int led4=7;

int waittime=1000;
void setup() {
  pinMode (led1,OUTPUT);
   pinMode (led2,OUTPUT); 
    pinMode (led3,OUTPUT);
     pinMode (led4,OUTPUT);
}

void loop() {
  digitalWrite(led1,HIGH);
  digitalWrite(led2,LOW);
  digitalWrite(led3,LOW);
  digitalWrite(led4,LOW);
  delay (waittime);
   digitalWrite(led2,HIGH);
  digitalWrite(led1,LOW);
  digitalWrite(led3,LOW);
  digitalWrite(led4,LOW);
delay (waittime);
  digitalWrite(led3,HIGH);
  digitalWrite(led2,LOW);
  digitalWrite(led,LOW);
  digitalWrite(led4,LOW);
  delay (waittime);
  digitalWrite(led4,HIGH);
  digitalWrite(led2,LOW);
  digitalWrite(led3,LOW);
  digitalWrite(led,LOW);
  delay (waittime);
   digitalWrite(led4,LOW);
  digitalWrite(led2,LOW);
  digitalWrite(led3,LOW);
  digitalWrite(led,LOW);
   delay (waittime);
    digitalWrite(led4,HIGH);
  digitalWrite(led2,LOW);
  digitalWrite(led3,LOW);
  digitalWrite(led,LOW);
  delay (waittime);
    digitalWrite(led3,HIGH);
  digitalWrite(led2,LOW);
  digitalWrite(led,LOW);
  digitalWrite(led4,LOW);
  delay (waittime);
   digitalWrite(led2,HIGH);
  digitalWrite(led1,LOW);
  digitalWrite(led3,LOW);
  digitalWrite(led4,LOW);
delay (waittime);
  digitalWrite(led1,HIGH);
  digitalWrite(led2,LOW);
  digitalWrite(led3,LOW);
  digitalWrite(led4,LOW);
  delay (waittime);
     digitalWrite(led4,LOW);
  digitalWrite(led2,LOW);
  digitalWrite(led3,LOW);
  digitalWrite(led,LOW);
   delay (waittime);
  
}
